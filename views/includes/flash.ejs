<style>
    @media (max-width: 500px) {
        .handle-alert {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .success-alert {
            width: 18rem;
            text-align: center;
            margin-left: 0.5rem;
        }
        .error-alert {
            width: 18rem;
            text-align: center;
            margin-left: 0.5rem;
        }
    }
</style>
<div class="handle-alert">
    <% if(success && success.length) {%>
        <div class="alert alert-success success-alert alert-dismissible fade show col-6 offset-3 mt-3" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <% if(error && error.length) {%>
        <div class="alert alert-danger error-alert alert-dismissible fade show col-6 offset-3 mt-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
</div>