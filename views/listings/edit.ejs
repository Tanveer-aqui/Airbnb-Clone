<%- layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit this Listing</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
            <div class="invalid-feedback">
                Title is required.
            </div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" cols="50" rows="5" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Add a description.
            </div>
        </div>
        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%= originalImageUrl %>" alt="listing_image">
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Image</lable>
            <input type="file" name="listing[image]" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control">
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                <div class="invalid-feedback">
                    Country name is required.
                </div>
            </div>
        </div>
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="invalid-feedback">
                Location is empty.
            </div>
        </div>
        <button class="btn btn-dark edit-btn mt-3 col-md-2">Edit</button>
        <br><br>
    </form>
    </div>
</div>

